<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Card for Mood Details with Dark Purple Palette -->
      <div class="card shadow-lg" style="background-color: #ffffff; color: #f0f0f5;">
        <div class="card-header text-center" style="background-color: #4E31AA; color: #f8f8ff;">
          <h2 class="mb-0">Mood Details</h2>
              <div class="d-flex justify-content-center align-items-center mt-2">
                <!-- Edit Icon -->
                <%= link_to edit_profile_mood_path(@profile, @mood), class: "text-decoration-none me-3" do %>
                  <i class="fas fa-edit fa-lg" style="color: #f8f8ff;"></i>
                <% end %>

                <!-- Delete Icon -->
                <%= form_with url: profile_mood_path(@profile, @mood), method: :delete, local: true do %>
                  <button type="submit" class="btn btn-link text-decoration-none" data-confirm="Are you sure you want to delete this mood?">
                    <i class="fas fa-trash-alt fa-lg text-danger"></i>
                  </button>
                <% end %>
              </div>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <h5 class="text-muted"><strong>Date</strong></h5>
            <p class="lead" style="color: #333;"><%= @mood.created_at.strftime("%B %d, %Y") %></p>
          </div>

          <div class="mb-4">
            <h5 class="text-muted"><strong>Mood</strong></h5>
            <p class="lead" style="color: #333;"><%= @mood.mood %></p>
          </div>

          <div class="mb-4">
            <h5 class="text-muted"><strong>Description</strong></h5>
            <p class="lead" style="color: #333;"><%= @mood.description %></p>
          </div>

          <!-- Back Button -->
          <div class="text-center mt-4">
            <%= link_to 'Back', profile_path(@profile), class: 'btn', style: 'background-color: #4E31AA; color: #f8f8ff;' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
