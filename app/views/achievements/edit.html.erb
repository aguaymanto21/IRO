<div class="form-container">
  <h1><%= @achievement.new_record? ? 'Add New Achievement' : 'Edit Achievement' %></h1>

  <%= form_with model: @achievement, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, 'Achievement Name' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :date, 'Date of Achievement' %>
      <%= f.date_select :date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description, 'Description' %>
      <%= f.text_area :description, rows: 5, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :image, 'Upload Image' %>
      <%= f.file_field :image, class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= f.submit @achievement.new_record? ? 'Create Achievement' : 'Update Achievement', class: 'btn btn-submit' %>
    </div>
  <% end %>

  <%= link_to 'Back to Achievements', achievements_path, class: 'btn btn-back' %>
</div>
