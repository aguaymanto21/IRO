<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Card for Mood Details with Dark Purple Palette -->
      <div class="card shadow-lg" style="background-color: #ffffff; color: #f0f0f5;">
        <div class="card-header text-center" style="background-color:; color: #f8f8ff;">

        <%= form_with(model: [@profile, @mood], local: true) do |f| %>
          <div class="form-group mb-3">
            <h2 class="mb-0" style= "color: #333;">Update Feelings</h2>
            <div class="checkbox-group d-flex flex-wrap">
              <% ['Happy', 'Excited', 'Calm', 'Stressed', 'Overwhelmed', 'Imposter Syndrome', 'Anxious'].each do |mood_option| %>
                <div class="tag-item me-2 mb-2">
                  <%= f.radio_button :mood, mood_option, id: "mood_#{mood_option.parameterize}", class: 'tag-selector', checked: (@mood.mood == mood_option) %>
                  <%= label_tag "mood_#{mood_option.parameterize}", mood_option, class: 'tag-selector-label' %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Description Field -->
          <div class="form-group mb-3">
            <%= f.label :description, "Update Your Description", class: "form-label" %>
            <%= f.text_area :description, rows: 4, class: "form-control", placeholder: "Describe your current feelings" %>
          </div>

          <div class="mt-3">
            <%= f.submit "Update Mood", class: "btn btn-primary" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
